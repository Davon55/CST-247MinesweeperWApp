
@model MinesweeperApp.MinesweeperGame.Board;
@{
    Layout = null;
}


    <div>
        <h1>Welcome to Minesweeper</h1>
    </div>
        <form>
        @for (int i = 0; i < Model.Size; i++)
        {
            if (i % 6 == 0)
            {
                <br />
            }
            <button type="submit" name="mine" value="@Model.Equals(i)" asp-controller="BoardGame" asp-action="HandleButtonClick">
                <img src="~/img/minesweeper.jpg" />
            </button>
        }
       




    

</form>


